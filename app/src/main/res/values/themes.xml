<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpotifyClone" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/bgcolor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bgcolor</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/bgcolor</item>
    </style>
    <style name="DatePickerTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/primary</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <item name="android:background">@color/bgcolor</item>
        <item name="colorOnPrimary">@color/primary</item>
    </style>

    <style name="CustomSeekBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@android:color/white</item>
        <item name="android:thumbTint">@android:color/white</item>
        <item name="cornerRadius">5dp</item>
    </style>
</resources>