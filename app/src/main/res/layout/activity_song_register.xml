<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/bgcolor"
    android:paddingHorizontal="15dp"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:textSize="32sp"
        android:textAlignment="center"
        android:text="Agora é com você"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#B8B7B5"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Registre sua música!"/>

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/bgcolor"
            app:strokeColor="@android:color/white"
            app:strokeWidth="2dp">

            <TextView
                android:id="@+id/image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:text="Imagem do álbum"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"/>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <EditText
        android:id="@+id/nome_musica"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/secondary_button_shape"
        android:layout_marginTop="28dp"
        android:hint="Nome da música"
        android:paddingHorizontal="45dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:inputType="textFilter"
        android:textColorHint="@android:color/white"
        android:paddingTop="3dp"/>

    <EditText
        android:id="@+id/nome_artista"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/secondary_button_shape"
        android:layout_marginTop="20dp"
        android:hint="Nome do artista"
        android:paddingHorizontal="45dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/white"
        android:paddingTop="3dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/arquivo_musica"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/secondary_button_shape"
        android:layout_marginTop="20dp"
        android:text="Arquivo de música"
        android:textAllCaps="false"
        android:paddingHorizontal="45dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textColorHint="@android:color/white"
        android:paddingTop="3dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registrar_musica"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/primary_button_shape"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Registrar Música"/>

    <TextView
        android:id="@+id/voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Voltar"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp"/>
</LinearLayout
    >